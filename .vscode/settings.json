{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.prettier": true
  },
  "eslint.validate": [
    "javascript"
  ],
  "eslint.run": "onSave",
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[vue]": {
    "editor.formatOnSave": true
  },
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "prettier.stylelintIntegration": true,
  "prettier.eslintIntegration": true,

}